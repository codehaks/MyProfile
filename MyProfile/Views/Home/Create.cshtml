@model MyProfile.Models.User

<h1>
    Create
</h1>
<hr />
<form method="post" asp-action="create" asp-controller="home">
    <input asp-for="Name" class="form-control" placeholder="Name" />
    <input asp-for="Age" class="form-control" placeholder="Age" />
    <textarea asp-for="Description" id="myEditor" class="form-control">

</textarea>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="Index" class="btn btn-link">Back to list</a>

@section styles{ 
    <link href="~/lib/ckeditor/contents.css" rel="stylesheet" />
}

@section scripts{ 
    <script src="~/lib/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace( 'myEditor' );
</script>
}
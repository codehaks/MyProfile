<h1>
    Create List
</h1>
<hr />
<form method="post" asp-action="createList" asp-controller="home">


    <input name="model[0].Name" class="form-control" placeholder="Name" />
    <input name="model[0].Age" class="form-control" placeholder="Age" />

    <br />

    <div id="form">

    </div>

    <button id="addMore" class="btn btn-success">Add More</button>

    <hr />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-link">Back to list</a>
</form>

<div hidden id="more">
    <input name="model[#].Name" class="form-control" placeholder="Name" />
    <input name="model[#].Age" class="form-control" placeholder="Age" />
    <br />
</div>

@section scripts{
    <script>
        var count = 1;
        $("#addMore").click(function (e) {
            e.preventDefault();

            var formContent = $("#more");
            var content = formContent.html().replace(/#/g, count);

            $("#form").append(content);

            count++;
        });
    </script>
}

